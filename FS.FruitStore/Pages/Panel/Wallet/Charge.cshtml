@page
@model FS.FruitStore.Pages.Admin.Wallet.ChargeModel
@{
    ViewData["Title"] = "شارژ کیف پول";
}
<div class="row">
    <!-- #region پنل-->
    <partial name="_Panel" />
    <!-- #endregion -->
    <div class="col-lg-9 col-12 mt-5">
        <div class="card">
            <div class="card-header">
                <h4 class="text-dark text-center"> شارژ کیف پول </h4>
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body pt-2">
                    <div class="chargh-inp">
                        <h5 class="ml-3 mt-2"> مبلغ شارژ  : </h5>
                        <input asp-for="Amount" class="form-control mr-2" style="width: 200px !important;">
                    </div>

                    <div class="btn-chargh-box">
                        <button class="btn btn-success btn-chargh" onclick="charghFunc('1000000')"> 1 میلیون تومان </button>
                        <button class="btn btn-warning btn-chargh" onclick="charghFunc('500000')"> 500 تومان </button>
                        <button class="btn btn-primary btn-chargh" onclick="charghFunc('200000')"> 200 تومان </button>
                        <button class="btn btn-danger btn-chargh" onclick="charghFunc('100000')"> 100 تومان </button>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12 mt-3">
                            <button type="submit" asp-route-Id="@Model.ApplicationUser.Id" class="btn btn-success btn-block"> شارژ </button>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12 mt-3">
                            <button class="btn btn-secondary btn-block"> بازگشت </button>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        let charghInp = document.querySelector('#chargh-inp');
        function charghFunc(item) {
            charghInp.value = item;
        }
    </script>


}