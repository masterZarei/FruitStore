@page
@model FS.FruitStore.Pages.Admin.WalletManagement.DetailsModel
@{
    ViewData["Title"] = "جزئیات کیف پول";
}

<div class="row ">
    <!-- #region پنل-->
    <partial name="_Panel" />
    <!-- #endregion -->
    <div class="col-lg-9 col-12 mt-5">
        <div class="card">
            <div class="card-header">
                <h4 class="h4 text-dark text-center"> جزئیات تراکنش @Model.WalletHistory.User.Name @Model.WalletHistory.User.LastName </h4>
            </div>
            <div class="card-body pt-2">
                <div class="d-flex">
                    <h4 class="my-1 ml-2 h5"> مبلغ کل : </h4> <span class="mt-2"> @Model.WalletHistory.TransactionAmount </span> <br>
                </div>
                <div class="d-flex">
                    <h4 class="my-1 ml-2 h5"> کد رهگیری : </h4> <span class="mt-2"> @Model.WalletHistory.TrackingCode </span> <br>
                </div>
                <div class="d-flex">
                    <h4 class="my-1 ml-2 h5"> موجودی جدید کیف پول : </h4> <span class="mt-2"> @Model.WalletHistory.NewWalletAmount.ToToman() </span> <br>
                </div>
                <div class="d-flex">
                    <h4 class="my-1 ml-2 h5"> تاریخ تراکنش : </h4> <span class="mt-2"> @Model.WalletHistory.CreateDate.ToShamsi() </span> <br>
                </div>
                <div class="d-flex">
                    <h4 class="mt-3 mb-2 h5 ml-2"> وضعیت : </h4> 
                    <span class="mt-2 btn btn-info">
                        @(Model.WalletHistory.State ? "شارژ" : "خرید")
                    </span> <br>
                </div>
                <a asp-page="Index" class="btn btn-secondary d-block btn-block mt-3 w-75 mx-auto"> بازگشت </a>

            </div>
        </div>
    </div>
</div>