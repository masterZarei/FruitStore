@page
@model FS.FruitStore.Pages.Admin.Discounts.CreateModel

@{
    ViewData["Title"] = "ایجاد تخفیف";
}
<div class="row">
    <partial name="_Panel" />

    <div class="col-lg-9 col-12 mt-5">
        <div class="card mb-4 mt-2 pb-4 text-center">
            <div class="card-header d-flex">
                <h4 class="h4 text-center m-auto text-dark"> ایجاد تخفیف </h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <h5> درصد </h5>
                    <input asp-for="Discount.Percent" class="form-control w-75" placeholder="درصد را وارد کنید">
                    <h5 class="my-3"> مناسبت </h5>
                    <input asp-for="Discount.Occasion" class="form-control" placeholder="مناسبت را وارد کنید">
                    <div class="row mt-3">
                        <div class="col-lg-6 col-md-6 col-12 my-1">
                            <button class="btn btn-block btn-success" type="submit"> ثبت </button>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12 my-1">
                            <a asp-page="Index" class="btn btn-block btn-secondary"> بازگشت </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
