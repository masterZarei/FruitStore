@page
@model FS.FruitStore.Pages.Admin.Preferences.Slider_Management.DetailsModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1 class="mt-3 text-center h3"> مدیریت قالب سایت </h1>
<div class="row">
    <partial name="_Panel" />


    <div class="col-lg-9 col-12">
        <div class="card mt-4">
           
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <label class="my-2"> کپشن </label>
                            <textarea asp-for="Slider.Caption"  disabled class="d-inline form-control"></textarea>

                            <label class="my-2"> لینک </label>
                            <input asp-for="Slider.Link" disabled type="text" class="d-inline form-control">

                            
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">

                            <img width="250px" src="~/img/@Model.Slider.Img" class="mr-5" height="250px" id="imgPreview" />

                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-lg-6 col-md-6 col-12">
                            <a asp-page="Edit" asp-route-Id="@Model.Slider.Id"  class="btn btn-info btn-block my-1"> ویرایش اطلاعات </a>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <a asp-page="Index" class="btn btn-secondary btn-block my-1"> بازگشت </a>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
