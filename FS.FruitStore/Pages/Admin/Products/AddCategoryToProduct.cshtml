@page
@model FS.FruitStore.Pages.Admin.Products.AddCategoryToProductModel
@{
}
<form method="post">
    <input type="hidden" asp-for="Product.ProductId" />
    <input type="hidden" asp-for="Product.Name" />
    <input type="hidden" asp-for="Product.Description" />
    <div class="row">

        <div class="col-lg-6 col-md-6 col-12 mt-5">
            <!-- باکس انتخاب کتگوری -->
            <div class="input-group">
                <!-- سلکت اپشن انتخاب کتگوری -->
                <select class="custom-select" asp-for="SelectedCat" asp-items="Model.Cats">
                </select>
                <div class="input-group-append">
                    <!-- دکمه اضافه کردن -->
                    <button asp-page-handler="AddCat" type="submit" class="btn btn-secondary"> اضافه کردن </button>
                </div>
            </div>
            <!-- دکمه تایید -->
            <button type="submit" class="btn btn-success btn-block my-3"> تایید </button>
        </div>


        <div class="col-lg-6 col-md-6 col-12 mt-5">
            <!-- جدول نمایش انتخاب -->
            <table class="table table-light table-bordered table-striped">
                <thead class="thead-light">
                    <tr>
                        <th class="text-center"> نام </th>
                        <th class="text-center"> <i class="fa fa-tasks"></i>  </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProdCats)
                    {
                        <tr>

                            <td class="text-center"> @item.Name </td>
                            <td class="text-center"> <button asp-page-handler="RemoveCat" type="submit" class="btn" asp-route-Id="@item.Id"><i class="fa fa-trash"></i></button>  </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    </div>
</form>

