@page
@model FS.FruitStore.Pages.Admin.Categories.EditModel
@using Utilities.Roles
@{
   // ViewData[PD.PanelViewData] = PD.Category;
}
<div class="container">

    <div class="row">

        <partial name="_Panel" />

        <div class="col-lg-9 col-12">
            <div class="card my-5 pb-4 text-center p-2">
                <h3>جزئیات دسته بندی "@Model.Category.Name"</h3>
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Category.Id" />
                    <div class="row p-3">
                      
                            <h6 class="text-right my-3"> نام دسته بندی </h6>
                            <input asp-for="Category.Name" class="form-control mt-2">
                            <span asp-validation-for="Category.Name" class="text-danger"></span>

                            <h6 class="text-right my-3"> توضیحات </h6>
                            <textarea asp-for="Category.Description" id="discription" cols="15" rows="5" class="form-control"></textarea>
                            <span asp-validation-for="Category.Description" class="text-danger"></span>

                      
                        <input type="submit" class="btn btn-success btn-block w-75 mx-auto d-block mt-3" value="بروزرسانی !">

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }