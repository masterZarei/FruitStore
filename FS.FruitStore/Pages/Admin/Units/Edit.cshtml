@page
@model FS.FruitStore.Pages.Admin.Units.EditModel

@{
    ViewData["Title"] = "Edit";
}



    <div class="row">

        @Html.Partial("_Panel")

        <div class="col-lg-9 col-12">
            <div class="card my-5 pb-4 text-center p-2">
                <h3>ویرایش واحد "@Model.Unit.Name"</h3>
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Unit.Id" />
                    <div class="row p-3">

                        <h6 class="text-right my-3"> نام واحد </h6>
                        <input asp-for="Unit.Name" class="form-control mt-2">
                        <span asp-validation-for="Unit.Name" class="text-danger"></span>

                        <h6 class="text-right my-3"> توضیحات </h6>
                        <textarea asp-for="Unit.Description" id="discription" cols="15" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="Unit.Description" class="text-danger"></span>


                        <input type="submit" class="btn btn-success btn-block w-75 mx-auto d-block mt-3" value="بروزرسانی !">

                    </div>
                </form>
            </div>
        </div>
    </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
