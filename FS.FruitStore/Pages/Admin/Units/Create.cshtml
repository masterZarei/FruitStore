@page
@model FS.FruitStore.Pages.Admin.Units.CreateModel
@{
    ViewData["Title"] = "ایجاد واحد";
}

    <div class="row">

        <partial name="_Panel" />


        <div class="col-lg-9 col-12">
            <div class="card my-5 pb-4 text-center p-2">
                <form method="post" enctype="multipart/form-data">
                    <div class="row p-3">

                        <h6 class="text-right my-3"> نام وحد </h6>
                        <input asp-for="Unit.Name" placeholder="نام واحد را وارد کنید . . . " class="form-control mt-2">
                        <span asp-validation-for="Unit.Name" class="text-danger"></span>

                        <h6 class="text-right my-3"> توضیحات </h6>
                        <textarea asp-for="Unit.Description" id="discription" cols="15" rows="5"
                                   class="form-control"></textarea>
                        <span asp-validation-for="Unit.Description" class="text-danger"></span>

                        <input type="submit" class="btn btn-success btn-block w-75 mx-auto d-block mt-3" value="تایید !">

                    </div>
                </form>
            </div>
        </div>
    </div>



@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }